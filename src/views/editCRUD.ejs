<body>
    <div class="container">
        <div class="row">
            <form action="/put-crud" method="POST">
                
                
                <div class="form-row">

                    <div class="col-12 mt-3">Edit User Information</div>
                    <input type="hidden" value="<%=user.id%>" name="id">
                    <div class="form-group col-6">
                        <label for="inputEmail4">First name</label>
                        <input type="text" value="<%=user.firstName%>" class="form-control" placeholder="First Name" name="firstName">
                    </div>
                    <div class="form-group col-6">
                        <label for="inputPassword4">Last name</label>
                        <input type="text" value="<%=user.lastName%>" class="form-control" name="lastName" placeholder="Last Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" value="<%=user.address%>" class="form-control" name="address" placeholder="Address" >
                </div>
                <div class="form-row">
                    <div class="form-group col-6">
                        <label for="inputCity">Phone number</label>
                        <input type="text" value="<%=user.phonenumber%>" class="form-control" name="phonenumber" placeholder="Phone number">
                    </div>
